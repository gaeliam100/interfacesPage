---
interface Props{
        url: string;
        action: string;
        description: string;
}
const {url,action,description}=Astro.props;

---
<li  class=" icon-content flex items-center justify-center text-black mx-0 my-2 relative hover:scale-125 duration-300 ease-in-out">
    {
        <a 
        href={url}
        aria-label={description}
        class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-200 hover:bg-gray-300"
        >
        <slot/>
        </a>
        <div class="tooltip text-white bg-gray-300 p-[0.275rem] rounded-md opacity-0 invisible text-[8px] transition-all duration-300 ease-in-out ">
            {action}
        </div>
    }
</li>
<style>
 .icon-content {
  position: relative;
}
.icon-content .tooltip {
  position: absolute;
  top: -30px;
  left: 50%;
  transform: translateX(-50%);
}
 .icon-content:hover .tooltip {
  opacity: 1;
  visibility: visible;
  top: -30px;
}
</style>